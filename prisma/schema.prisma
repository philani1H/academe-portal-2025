generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(cuid())
  email           String         @unique
  password        String
  name            String?
  role            String         @default("student") // admin, tutor, student
  resetToken      String?
  resetTokenExpiry DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  // Profile fields
  bio             String?
  subjects        String?        // JSON string of subjects
  profileImage    String?
  
  // Relations
  enrollments     CourseEnrollment[]
  teachingCourses Course[]       @relation("TutorCourses")
  sentMessages    Message[]      @relation("SentMessages")
  receivedMessages Message[]     @relation("ReceivedMessages")
  
  // Timetable
  timetableEntries TimetableEntry[]
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String?
  price       Float    @default(0)
  category    String   @default("General") // High School, University, etc.
  grade       String?  // Grade 10, 11, 12, etc.
  
  // Status
  isPublished Boolean  @default(false)
  
  // Relations
  tutorId     String
  tutor       User     @relation("TutorCourses", fields: [tutorId], references: [id])
  students    CourseEnrollment[]
  modules     Module[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CourseEnrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  status    String   @default("active") // active, completed, dropped
  progress  Float    @default(0)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
}

model Module {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int      @default(0)
  
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Lesson {
  id          String   @id @default(cuid())
  title       String
  content     String?  // Markdown or HTML content
  videoUrl    String?
  duration    Int?     // In minutes
  order       Int      @default(0)
  isFree      Boolean  @default(false)
  
  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id          String   @id @default(cuid())
  content     String
  isRead      Boolean  @default(false)
  
  senderId    String
  sender      User     @relation("SentMessages", fields: [senderId], references: [id])
  
  receiverId  String
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  
  createdAt   DateTime @default(now())
}

// Content Management Models

model HeroContent {
  id          String   @id @default(cuid())
  title       String
  subtitle    String
  ctaText     String?
  ctaLink     String?
  backgroundImage String?
  updatedAt   DateTime @updatedAt
}

model Feature {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Announcement {
  id          String   @id @default(cuid())
  title       String
  content     String
  type        String   @default("info") // info, warning, success, etc.
  pinned      Boolean  @default(false)
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  role        String?
  content     String
  avatarUrl   String?
  rating      Int      @default(5)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PricingPlan {
  id          String   @id @default(cuid())
  name        String
  price       Float
  interval    String   // month, year, once
  features    String   // JSON string of features
  isPopular   Boolean  @default(false)
  buttonText  String   @default("Get Started")
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Subject {
  id          String   @id @default(cuid())
  name        String
  code        String?
  description String?
  imageUrl    String?
  category    String?  // High School, University, etc.
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  category    String   @default("general")
  updatedAt   DateTime @updatedAt
}

model FooterContent {
  id          String   @id @default(cuid())
  description String?
  address     String?
  email       String?
  phone       String?
  socialLinks String?  // JSON string
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model NavigationItem {
  id          String   @id @default(cuid())
  label       String
  path        String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  type        String   @default("main") // main, footer, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExamRewriteContent {
  id          String   @id @default(cuid())
  title       String
  description String
  features    String?  // JSON string
  requirements String? // JSON string
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model UniversityApplicationContent {
  id          String   @id @default(cuid())
  title       String
  description String
  services    String?  // JSON string
  deadlines   String?  // JSON string
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model ContactUsContent {
  id          String   @id @default(cuid())
  title       String
  description String
  email       String?
  phone       String?
  address     String?
  mapUrl      String?
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model BecomeTutorContent {
  id          String   @id @default(cuid())
  title       String
  description String
  requirements String? // JSON string
  benefits    String?  // JSON string
  ctaText     String?
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model LiveSession {
  id          String   @id @default(cuid())
  sessionId   String   @unique
  courseId    String
  hostId      String
  startTime   DateTime @default(now())
  endedAt     DateTime?
  status      String   @default("active") // active, ended
  
  // Metadata for logs
  participantsCount Int @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimetableEntry {
  id          String   @id @default(cuid())
  day         String   // Monday, Tuesday, etc.
  startTime   String   // HH:mm
  endTime     String   // HH:mm
  subject     String
  type        String   // Class, Exam, Event
  room        String?  // Can be used for targeted students (JSON array of IDs)
  color       String?  // Hex color code
  
  userId      String?  // Optional: Assign to specific user
  user        User?    @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
